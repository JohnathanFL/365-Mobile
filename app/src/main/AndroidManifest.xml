<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.mnstate.majorproject1">

    <application
        android:name=".TodoApp"
        android:allowBackup="true"
        android:icon="@drawable/checkmark"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CalendarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DailyActivity" />
        <!-- noHistory trick learned from https://stackoverflow.com/questions/1898886/removing-an-activity-from-the-history-stack -->
        <activity android:name=".AddTaskActivity" android:noHistory="true"/>
        <activity android:name=".TaskDetailActivity" />
    </application>

</manifest>