<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputFragment">

    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/match_constraint"
        android:layout_marginLeft="@dimen/med_margin"
        android:gravity="center"
        android:text="@string/gpu"
        app:layout_constraintBottom_toBottomOf="@+id/chosenGPU"
        app:layout_constraintEnd_toStartOf="@+id/chosenGPU"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chosenGPU" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/match_constraint"
        android:layout_marginLeft="@dimen/med_margin"
        android:gravity="center"
        android:text="@string/batteries"
        app:layout_constraintBottom_toBottomOf="@+id/extraBatteries"
        app:layout_constraintEnd_toStartOf="@+id/extraBatteries"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/extraBatteries" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/match_constraint"
        android:layout_marginLeft="@dimen/med_margin"
        android:gravity="center"
        android:text="@string/ram"
        app:layout_constraintBottom_toBottomOf="@+id/includedRAM"
        app:layout_constraintEnd_toStartOf="@+id/includedRAM"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/includedRAM" />

    <TextView
        android:id="@+id/textView4"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/payoff_date_min_1_month"
        app:layout_constraintBottom_toTopOf="@+id/payoffDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includedRAM" />

    <RadioGroup
        android:id="@+id/chosenGPU"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/med_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/extraBatteries"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/choseIntel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/intel" />

        <RadioButton
            android:id="@+id/choseAMD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="false"
            android:text="@string/amd" />

        <RadioButton
            android:id="@+id/choseNVIDIA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nvidia" />
    </RadioGroup>

    <CalendarView
        android:id="@+id/payoffDate"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Spinner
        android:id="@+id/includedRAM"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/med_margin"
        android:entries="@array/ram_names"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/extraBatteries" />

    <SeekBar
        android:id="@+id/extraBatteries"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/med_margin"
        android:max="10"
        android:progress="1"
        app:layout_constraintBottom_toTopOf="@+id/includedRAM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/chosenGPU" />

</androidx.constraintlayout.widget.ConstraintLayout>