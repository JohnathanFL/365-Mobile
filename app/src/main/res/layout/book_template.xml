<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_cover_art"
            android:layout_width="@dimen/artWidth"
            android:layout_height="@dimen/artHeight"
            />

        <ImageView
            android:id="@+id/imageview_favorite"
            android:layout_width="@dimen/favWidth"
            android:layout_height="@dimen/favHeight"
            android:src="@android:drawable/star_off"
            android:layout_gravity="bottom|right"/>

    </FrameLayout>

    <TextView
        android:id="@+id/textview_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        tools:text="@string/placeholderTitle"
        android:textStyle="bold"
        android:paddingTop="@dimen/padTop"
        android:paddingLeft="@dimen/titlePadding"
        android:paddingRight="@dimen/titlePadding"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textview_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        tools:text="@string/placeholderAuthor"
        android:gravity="center_horizontal"/>

</LinearLayout>