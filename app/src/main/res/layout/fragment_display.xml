<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayFragment">

    <TextView
        android:id="@+id/priceGPU"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/price_of_gpu"
        app:layout_constraintBottom_toTopOf="@+id/priceRAM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceRAM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/price_of_ram"
        app:layout_constraintBottom_toTopOf="@+id/priceBatteries"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceGPU" />

    <TextView
        android:id="@+id/priceBatteries"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/price_of_batteries"
        app:layout_constraintBottom_toTopOf="@+id/numMonths"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceRAM" />

    <TextView
        android:id="@+id/numMonths"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/months"
        app:layout_constraintBottom_toTopOf="@+id/monthlyPayment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceBatteries" />

    <TextView
        android:id="@+id/monthlyPayment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/monthly_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numMonths" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/gpu_price"
        app:layout_constraintBaseline_toBaselineOf="@+id/priceGPU"
        app:layout_constraintEnd_toStartOf="@+id/priceGPU"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/ram_price"
        app:layout_constraintBaseline_toBaselineOf="@+id/priceRAM"
        app:layout_constraintEnd_toStartOf="@+id/priceRAM"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/battery_price"
        app:layout_constraintBaseline_toBaselineOf="@+id/priceBatteries"
        app:layout_constraintEnd_toStartOf="@+id/priceBatteries"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/months_until_payoff"
        app:layout_constraintBaseline_toBaselineOf="@+id/numMonths"
        app:layout_constraintEnd_toStartOf="@+id/numMonths"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/monthly_payment"
        app:layout_constraintBaseline_toBaselineOf="@+id/monthlyPayment"
        app:layout_constraintEnd_toStartOf="@+id/monthlyPayment"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>